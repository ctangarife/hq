# ==============================================================================
# HQ - AI Agent Headquarters
# Template de variables de entorno
# Copia este archivo a .env y completa los valores
# ==============================================================================

# -----------------------------------------------------------------------------
# INFRAESTRUCTURA
# -----------------------------------------------------------------------------

# Puerto donde Nginx escucha (host)
NGINX_HOST_PORT=80

# Puerto healthcheck de Nginx
NGINX_HEALTH_PORT=8080

# -----------------------------------------------------------------------------
# MONGODB
# -----------------------------------------------------------------------------

# Usuario root de MongoDB
MONGODB_ROOT_USERNAME=root
MONGODB_ROOT_PASSWORD=change_me_please_use_strong_password

# Base de datos de la aplicación
MONGODB_DATABASE=hq

# -----------------------------------------------------------------------------
# API BACKEND (Node.js/Express)
# -----------------------------------------------------------------------------

# Puerto interno del API
API_PORT=3001

# URL pública del API (accesible desde browser)
API_PUBLIC_URL=http://localhost/api

# Secret para autenticación (mínimo 32 caracteres)
API_JWT_SECRET=change_me_to_a_secure_random_string_min_32_chars

# Secret para autenticación de UI (similar a openclaw-docker)
UI_SECRET=change_me_to_a_secure_password

# -----------------------------------------------------------------------------
# FRONTEND (Next.js)
# -----------------------------------------------------------------------------

# Puerto interno del frontend
NEXT_PORT=3000

# URL pública del frontend
NEXT_PUBLIC_URL=http://localhost

# URL del API backend
NEXT_PUBLIC_API_URL=http://localhost/api

# -----------------------------------------------------------------------------
# DOCKER ENGINE API
# -----------------------------------------------------------------------------

# Socket de Docker para gestión de contenedores
# - Linux: /var/run/docker.sock
# - Windows/Docker Desktop: //./pipe/docker_engine
# - macOS: /var/run/docker.sock
DOCKER_SOCKET=/var/run/docker.sock

# -----------------------------------------------------------------------------
# AGENT BASE (OpenClaw)
# -----------------------------------------------------------------------------

# Imagen base para agentes (Docker Hub o build local)
AGENT_BASE_IMAGE=openclaw/agent:latest

# Red Docker donde se crean los contenedores de agentes
AGENT_NETWORK=hq-network

# Directorio de workspace compartido para agentes
AGENT_WORKSPACE_PATH=/data/agent-workspace

# -----------------------------------------------------------------------------
# TELEGRAM BOT
# -----------------------------------------------------------------------------

# Token del bot de Telegram (obtenido de @BotFather)
TELEGRAM_BOT_TOKEN=

# Webhook URL para Telegram (se configura automáticamente)
TELEGRAM_WEBHOOK_URL=http://your-domain.com/api/telegram/webhook

# Chat ID donde se envían notificaciones globales
TELEGRAM_NOTIFICATION_CHAT_ID=

# -----------------------------------------------------------------------------
# LLM PROVIDERS
# -----------------------------------------------------------------------------

# Provider principal para agentes (zai, anthropic, openai)
DEFAULT_LLM_PROVIDER=zai

# Modelo por defecto para agentes
# Z.ai: glm-4-plus, glm-4-air, glm-4-flash, glm-4-flashx
DEFAULT_LLM_MODEL=glm-4-plus

# -----------------------------------------------------------------------------
# Z.AI (https://docs.z.ai)
# -----------------------------------------------------------------------------

# API Key de Z.ai (obténla en: https://open.bigmodel.cn/usercenter/apikeys)
ZAI_API_KEY=

# API Endpoint de Z.ai (normalmente no es necesario cambiarlo)
ZAI_API_ENDPOINT=https://open.bigmodel.cn/api/paas/v4/

# -----------------------------------------------------------------------------
# OTROS PROVIDERS (Opcional)
# -----------------------------------------------------------------------------

# API Key Anthropic (opcional - se puede gestionar por UI)
ANTHROPIC_API_KEY=

# API Key OpenAI (opcional - se puede gestionar por UI)
OPENAI_API_KEY=

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------

# Nivel de logging: debug, info, warn, error
LOG_LEVEL=info

# Habilitar logs en consola
LOG_CONSOLE=true

# -----------------------------------------------------------------------------
# SEGURIDAD
# -----------------------------------------------------------------------------

# Permitir auth inseguro (solo para desarrollo)
ALLOW_INSECURE_AUTH=true

# CORS origins permitidos (separados por coma)
CORS_ORIGINS=http://localhost,http://localhost:3000

# -----------------------------------------------------------------------------
# MONITOREO
# -----------------------------------------------------------------------------

# Habilitar endpoint de métricas
METRICS_ENABLED=false

# Puerto para métricas (Prometheus)
METRICS_PORT=9090
